if(POLICY CMP0012)
  cmake_policy(SET CMP0012 NEW)
endif()

message(STATUS "Parsing Requirements data...")
set( DOCUMENT_VISTA_REQUIREMENTS_OLD @DOCUMENT_VISTA_REQUIREMENTS_OLD@)
if(DOCUMENT_VISTA_REQUIREMENTS_OLD)
  set(OLD_DATA  "-p ${DOCUMENT_VISTA_REQUIREMENTS_OLD}")
else()
  set(OLD_DATA "")
endif()

execute_process(COMMAND
  "@PYTHON_EXECUTABLE@"
  "@PYTHONSCRIPTS_DIR@/RequirementsParser.py"
  ${OLD_DATA}
  "@CMAKE_CURRENT_SOURCE_DIR@/Open Needs_Epics with BFFs (for Open Source)_July2017.xls"
  @DOCUMENT_VISTA_REQUIREMENTS_OUTPUT_DIR@
  OUTPUT_VARIABLE output ERROR_VARIABLE output RESULT_VARIABLE retValue)
if(NOT retValue EQUAL 0)
  message(FATAL_ERROR "Error running Requirements Parser:\n\n${output}")
endif()
