# Add one Division inside an Institution

def AddOneDivision(VistA,divisionname,facilitynumber,institutionpointer):
  VistA.wait('Select OPTION:')
  VistA.write('1')
  VistA.wait('INPUT TO WHAT FILE:')
  VistA.write('40.8')
  VistA.wait('EDIT WHICH FIELD')
  VistA.write('FACILITY NUMBER')
  VistA.wait('THEN EDIT FIELD')
  VistA.write('INSTITUTION FILE POINTER')
  VistA.wait('THEN EDIT FIELD')
  VistA.write('')
  VistA.wait('DIVISION NAME')
  VistA.write(divisionname)
  VistA.wait('Are you adding')
  VistA.write('Y')
  VistA.wait('MEDICAL CENTER DIVISION NUM:')
  VistA.write('')
  VistA.wait('FACILITY NUMBER')
  VistA.write(facilitynumber)
  VistA.write('')
  VistA.wait('INSTITUTION FILE POINTER')
  VistA.write(institutionpointer)
  VistA.wait('Select MEDICAL CENTER DIVISION NAME')
  VistA.write('')

