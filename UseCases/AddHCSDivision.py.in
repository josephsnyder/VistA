# Add one Division inside an Institution

def AddHCSDivision(VistA,divisionname,facilitynumber,multidivision):
  VistA.write('S DUZ=1 D ^XUP')
  VistA.wait('Select OPTION NAME')
  VistA.write('MAS PARAMETER ENTRY')
  VistA.wait('RETURN to QUIT:')
  VistA.write('1')
  VistA.wait('MEDICAL CENTER NAME')
  VistA.write(divisionname)
  VistA.wait('Are you adding')
  VistA.write('Y')
  VistA.wait('MEDICAL CENTER DIVISION NUM')
  VistA.write('')
  VistA.wait('MEDICAL CENTER DIVISION FACILITY NUMBER')
  VistA.write(facilitynumber)
  VistA.wait('AFFILIATED')
  VistA.write('Y')
  VistA.wait('MULTIDIVISION MED CENTER')
  VistA.write(multidivision)
  VistA.wait('NURSING HOME WARDS')
  VistA.write('')
  VistA.wait('DOMICILIARY WARDS')
  VistA.write('')
  VistA.wait('SYSTEM TIMEOUT')
  VistA.write('')
  VistA.wait('AUTOMATIC PTF MESSAGES')
  VistA.write('')
  VistA.wait('PRINT PTF MESSAGES')
  VistA.write('')
  VistA.wait('DEFAULT PTF MESSAGE PRINTER')
  VistA.write('')
  VistA.wait('SHOW STATUS SCREEN')
  VistA.write('0')
  VistA.wait('USE HIGH INTENSITY ON SCREENS')
  VistA.write('')
  VistA.wait('EXCLUDE WHICH TERMINAL TYPES')
  VistA.write('')
  VistA.wait('CONSISTENCY CHECKER ON')
  VistA.write('Y')
  VistA.wait('ABBREVIATED PATIENT INQUIRY')
  VistA.write('')
  VistA.wait('RETURN to QUIT')
  VistA.write('')